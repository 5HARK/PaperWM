<schemalist>
  <schema id="org.gnome.shell.extensions.org-scrollwm" path="/org/gnome/shell/extensions/org-scrollwm/">
    <!-- Settings -->
    <key type="s" name="locations">
      <default>"{}"</default>
      <summary>Application based configuration</summary>
    </key>

    <key type="i" name="ignore-top-panel">
      <default>0</default>
      <summary>Ignore top panel height</summary>
    </key>


    <key type="i" name="horizontal-margin">
      <default>20</default>
      <summary>Minimum margin from windows left and right edge</summary>
    </key>

    <key type="i" name="vertical-margin">
      <default>2</default>
      <summary>Minimum margin from windows top and bottom edge</summary>
    </key>

    <key type="i" name="window-gap">
      <default>10</default>
      <summary>Minimum gap between windows</summary>
    </key>

    <!-- Keybindings -->
    <key type="as" name="live-alt-tab">
      <default><![CDATA[['<Super>Tab']]]></default>
      <summary>Switch to previously used window</summary>
    </key>
    <key type="as" name="live-alt-tab-backward">
      <default><![CDATA[['<Super><Shift>Tab']]]></default>
      <summary>Switch to previously used window, backward order</summary>
    </key>

    <key type="as" name="previous-workspace">
      <default><![CDATA[['<Super>d']]]></default>
      <summary>Switch to previously used workspace</summary>
    </key>
    <key type="as" name="previous-workspace-backward">
      <default><![CDATA[['<Super>u']]]></default>
      <summary>Switch to the previously used workspace, backward order</summary>
    </key>

    <key type="as" name="move-previous-workspace">
      <default><![CDATA[['<Super><Shift>d']]]></default>
      <summary>Move current window to the previously used workspace</summary>
    </key>
    <key type="as" name="move-previous-workspace-backward">
      <default><![CDATA[['<Super><Shift>u']]]></default>
      <summary>Move current window to the previously used workspace, backward order</summary>
    </key>

    <key type="as" name="toggle-scratch-layer">
      <default><![CDATA[['<Super>e']]]></default>
      <summary>Toggles the floating scratch layer</summary>
    </key>

    <key type="as" name="switch-next">
      <default><![CDATA[['<Super>period', '<Super>Right']]]></default>
      <summary>Switch to the next window</summary>
    </key>
    <key type="as" name="switch-previous">
      <default><![CDATA[['<Super>comma', '<Super>Left']]]></default>
      <summary>Scroll to the previous window</summary>
    </key>

    <key type="as" name="move-right">
      <default><![CDATA[['<Super><Shift>period', '<Super><Shift>Right']]]></default>
      <summary>Move the focused window right in the tiling</summary>
    </key>
    <key type="as" name="move-left">
      <default><![CDATA[['<Super><Shift>comma', '<Super><Shift>Left']]]></default>
      <summary>Move the focused window left in the tiling</summary>
    </key>

    <key type="as" name="cycle-width">
      <default><![CDATA[['<Super>r']]]></default>
      <summary>Cycle through a pre-determined list of window widths</summary>
    </key>

    <key type="as" name="tile-visible">
      <default><![CDATA[['<Super>t']]]></default>
      <summary>Squeeze all visible windows fully into the view</summary>
    </key>

    <key type="as" name="develop-set-globals">
      <default><![CDATA[['<Super>Insert']]]></default>
      <summary>
        Develop: set various global js variables. Eg. `metaWindow` to the focused window
      </summary>
    </key>
  </schema>
</schemalist>
